<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base config: Allow cleartext for development (needed for IP addresses) -->
    <!-- In production, consider restricting this to specific domains -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user certificates (for debugging) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Specific domain configuration for modelscope.cn -->
    <!-- This ensures ModelScope domains are properly trusted and DNS resolution works -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">www.modelscope.cn</domain>
        <domain includeSubdomains="true">modelscope.cn</domain>
        <domain includeSubdomains="true">modelscope.com</domain>
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user certificates (for debugging) -->
            <certificates src="user" />
        </trust-anchors>
        <!-- Pin certificates if needed in the future -->
    </domain-config>
    
    <!-- Allow localhost for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- Allow cleartext traffic for device service API (IP address) -->
    <!-- Note: Android's network security config has limited support for IP addresses -->
    <!-- The base-config above allows cleartext, but we explicitly allow this IP here -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">8.140.251.142</domain>
    </domain-config>
    
    <!-- Allow HTTPS traffic for mobile auth API -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">test.chengfangtech.com</domain>
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user certificates (for debugging) -->
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>

